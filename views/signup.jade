extends layout

block content
	div.container-fluid
		form.form-horizontal(method='post')
			fieldset
				legend Account Sign-Up
				- if (message)
					div(class='alert alert-error') #{message}
				div.control-group
					label.control-label(for='username') Account
					div.controls
						input#username.input-xlarge(type='text' name='username')
				
				div.control-group
					label.control-label(for='password') Password
					div.controls
						input#password.input-xlarge(type='password' name='password')
						
				div.control-group
					label.control-label(for='passwordconfirm') Password Confirm
					div.controls
						input#passwordconfirm.input-xlarge(type='password' name='passwordconfirm')				
				
				div.form-actions
					button(class='btn btn-primary' type='submit') Sign Up	
	
		
